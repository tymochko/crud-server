<div class="user-form__wrapper">
    <form class="user-form" action="/" method="post">
        {{#user__form}}
            <input class="user-form__input" type="text" name="name" placeholder="{{name}}" required>
            <input class="user-form__input" type="text" name="surname" placeholder="{{surname}}" required>
            <input class="user-form__input" type="text" name="age" placeholder="{{age}}" required>
            <input class="user-form__input" type="submit" value="{{button}}">
        {{/user__form}}
    </form>
</div>
<div class="table__wrapper">
    <table class="table">
        {{#table__header}}
            <tr class="table__row table__row--header">
                <th class="table__cell table__header">{{name}}</th>
                <th class="table__cell table__header">{{surname}}</th>
                <th class="table__cell table__header">{{age}}</th>
                <th class="table__cell table__header">{{action}}</th>
            </tr>
        {{/table__header}}
        {{#table__row}}
            <tr class="table__row">
                <td class="table__cell">{{name}}</td>
                <td class="table__cell">{{surname}}</td>
                <td class="table__cell">{{age}}</td>
                <td class="table__cell">
                    <form class="table__form" method="link" action="index.html">
                        <input class="form__button" type="button" value="Edit">
                        <input class="form__button" type="button" value="Delete">
                    </form>
                </td>
            </tr>
        {{/table__row}}
    </table>
</div>